<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="75dip" />
            <stroke android:width="1dip" android:color="#11c621" />
            <gradient android:angle="-90" android:startColor="#0b7f15" android:endColor="#16f929"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="75dip" />
            <stroke android:width="1dip" android:color="#0b7f15" />
            <solid android:color="#11c621"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="75dip" />
            <stroke android:width="1dip" android:color="#0b7f15" />
            <gradient android:angle="-90" android:startColor="#16f929" android:endColor="#11c621" />
        </shape>
    </item>
</selector>