<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="75dip" />
            <stroke android:width="1dip" android:color="#af3131" />
            <gradient android:angle="-90" android:startColor="#dd1f1f" android:endColor="#994c4c"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="75dip" />
            <stroke android:width="1dip" android:color="#af3131" />
            <solid android:color="#af3131"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="75dip" />
            <stroke android:width="1dip" android:color="#af3131" />
            <gradient android:angle="-90" android:startColor="#994c4c" android:endColor="#dd1f1f" />
        </shape>
    </item>
</selector>